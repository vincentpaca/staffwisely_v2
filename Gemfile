  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'therubyracer', :platforms => :ruby
  gem 'uglifier', '>= 1.0.3'
end

group :test, :development do
  gem 'rspec-rails', '~> 2.0'
  gem 'capybara'
  gem 'shoulda-matchers'
  gem 'guard-rspec'
  gem 'simplecov', '>= 0.4.0', :require => false
end

group :development do
  gem 'letter_opener'
end

