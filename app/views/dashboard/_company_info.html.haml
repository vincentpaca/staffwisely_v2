.grid_4.alpha
  .pane-white.clearfix
    .user-contractor
      .clearfix
        .user-thumb
          = image_tag("user-1.png")
        .user-details.clearfix
          %ul
            %li.contractor-name= current_user.company.name
            %li.contractor-location
              %i.icon-map-marker
              - if current_user.company.address.present?
                = current_user.company.address
              - else
                Add your address here
      .contractor-desc= current_user.company.description

  - if request.fullpath == "/dashboard"
    = link_to "Post a project", new_job_path, :class => "btn signup-cta full"
