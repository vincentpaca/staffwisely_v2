%section.page
  %section.wrapper.container_12.clearfix
    = render 'company_info'

    .grid_8.omega
      .pane-white{ :style => 'padding: 0' }
        .post-item
          %h1=t @project.title
          .project-meta
            %ul
              %li
                %strong=t 'jobs.show.labels.arrangement'
                = WorkingArrangement.find(@project.working_arrangement).name
              %li
                %strong=t 'jobs.show.labels.experience'
                = Experience.find(@project.experience).name
          .project-desc
            %p= @project.description.html_safe

          .job-requirements
            %h2=t 'jobs.show.labels.requirements'
            %p= @project.requirements.html_safe

      - if current_user
        = render 'proposal'
      - else
        = link_to "Submit a proposal", send_proposal_project_path(@project), :class => "btn signup-cta full"

