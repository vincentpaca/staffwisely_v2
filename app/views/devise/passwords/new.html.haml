= render 'shared/devise_header'
%section
  .user-account-single.centered
    .page
      %h1 Forgot your password?
      .form-wrap.fancy-form-wrap      
        
        = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
          = devise_error_messages!
          %fieldset
            = f.label :email
            = f.email_field :email
          %fieldset
            = f.submit "Send me reset password instructions", :class => 'btn signup-cta full'
          %fieldset
            = render "devise/shared/links"
