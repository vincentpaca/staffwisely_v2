%header
  %section.centered.container_12
    .head-wrap.fixed.clearfix
      = link_to "", root_url, :class => "logo", :style => "position: relative"
      
%section



  .user-account-single.centered
    %h1 Login
    %p 
      Don't have an account? &nbsp; 
      - if devise_mapping.registerable? && controller_name != 'registrations'
        = link_to "Sign up", new_registration_path(resource_name), :class => 'btn'
    .page
      .form-wrap.fancy-form-wrap
        = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
          
          %fieldset
            = f.label :email
            = f.email_field :email
          %fieldset
            = f.label :password
            = f.password_field :password
          - if devise_mapping.rememberable?
            %fieldset
              = f.check_box :remember_me
              = f.label :remember_me, :style => 'display: inline-block; font-family: "OpenSansRegular"; font-size: 13px; top: -2px; position: relative'
          %fieldset
            = f.submit "Sign in", :class => "btn full signup-cta"
          %fieldset
            = render "devise/shared/links"
