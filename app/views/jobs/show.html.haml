%section.page
  %section.wrapper.container_12.clearfix
    = render 'dashboard/company_info'

    .grid_8.omega
      .pane-white{ :style => 'padding: 0' }
        .post-item
          %h1=t @job.title
          .project-meta
            %ul
              %li
                %strong=t 'jobs.show.labels.arrangement'
                = WorkingArrangement.find(@job.working_arrangement).name
              %li
                %strong=t 'jobs.show.labels.experience'
                = Experience.find(@job.experience).name
          .project-desc
            %p= @job.description.html_safe

          .job-requirements
            %h2=t 'jobs.show.labels.requirements'
            %p= @job.requirements.html_safe
